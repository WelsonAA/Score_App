<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/teamA"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/teamA"
        android:textAlignment="center"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/teamB"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/teamB"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/teamB_score"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/teamA_score"

        app:layout_constraintTop_toBottomOf="@id/teamB"

        app:layout_constraintVertical_bias="0.039" />

    <TextView
        android:id="@+id/teamA_score"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teamA"
        app:layout_constraintVertical_bias="0.039" />

    <Button
        android:id="@+id/teamA_1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="@string/free_throw"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/teamA_score"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/teamA_2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="@string/points2"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/teamA_1"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/teamA_3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="@string/points3"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/teamA_2"
        tools:layout_editor_absoluteX="16dp" />


    <Button
        android:id="@+id/teamB_1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="24dp"
        android:text="@string/free_throw"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@id/teamA_1"
        app:layout_constraintTop_toBottomOf="@id/teamB_score" />

    <Button
        android:id="@+id/teamB_2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="32dp"
        android:text="@string/points2"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@id/teamA_2"
        app:layout_constraintTop_toBottomOf="@id/teamB_1" />

    <Button
        android:id="@+id/teamB_3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="32dp"
        android:text="@string/points3"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@id/teamA_3"
        app:layout_constraintTop_toBottomOf="@id/teamB_2" />

    <TextView
        android:id="@+id/winner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/teamA_3"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/resetter"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="156dp"
        android:text="@string/resetter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/winner" />
</androidx.constraintlayout.widget.ConstraintLayout>